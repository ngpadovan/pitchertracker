<%- include('../partials/header') %>

<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <body>
        
        <form id="edit-pitcher-form" action="/pitchers/<%= pitcher._id %>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            
            <label>First Name:</label>
            <input type="text" name="firstName" value="<%= pitcher.firstName %>" required>
            
            <label>Last Name:</label>
            <input type="text" name="lastName" value="<%= pitcher.lastName %>" required>
            
            <label>Team:</label>
            <input type="text" name="team" value="<%= pitcher.team %>" required>
            
            <label>Jersey Number:</label>
            <input type="number" name="jerseyNo" value="<%= pitcher.jerseyNo %>" required min="1">
            
            <label>Throws:</label>
            <select name="throws" required>
                <option value="RHP" <%= pitcher.throws === 'RHP' ? 'selected' : '' %>>RHP</option>
                <option value="LHP" <%= pitcher.throws === 'LHP' ? 'selected' : '' %>>LHP</option>
            </select>
            
            <label>ERA:</label>
            <input type="text" name="era" value="<%= pitcher.era %>" required>
            
            <label>Wins:</label>
            <input type="number" name="wins" value="<%= pitcher.wins %>" required min="0">
            
            <label>Losses:</label>
            <input type="number" name="losses" value="<%= pitcher.losses %>" required min="0">
            
            <label>Birthdate:</label>
            <input type="date" name="birthdate" value="<%= pitcher.birthdate.toISOString().split('T')[0] %>" required>
            
            <input type="submit" value="Update Pitcher">
        </form>
    </body>